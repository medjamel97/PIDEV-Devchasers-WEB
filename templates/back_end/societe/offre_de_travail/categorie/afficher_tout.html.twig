{% extends '/back_end/base.html.twig' %}
{% block content %}
    <section class="container-fluid bg-light">
        <h1 class="h3 mb-2 text-gray-800 text-center mt-4">Categories</h1>
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="section-title text-center mb-4 py-4">
                    <table class="table border bg-white">
                        {% set hasData = false %}
                        {% if categories %}
                            {% set hasData = true %}
                            <tr>
                                <td><b>Categorie</b></td>
                                <td><b>Operations</b></td>
                            </tr>
                        {% endif %}
                        {% for categorie in categories %}
                            <tr>
                                <td>{{ categorie.nom }}</td>
                                <td>
                                    <div class="form-row">
                                        <div class="form-group col-md-4 my-0 mx-auto">
                                            <a href="{{ asset('back_end/categorie/'~categorie.id~'/modifier') }}"
                                               class="btn btn-outline-dark" role="button"
                                               aria-pressed="true"><i class="fa fa-pen"></i> Modifier</a>
                                        </div>
                                        <div class="form-group col-md-4 my-0 mx-auto">
                                            <a href="{{ asset('back_end/categorie/'~categorie.id~'/supprimer') }}"
                                               class="btn btn-outline-danger " role="button"
                                               aria-pressed="true"><i class="fa fa-trash"></i> Supprimer</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        {% if not hasData %}
                            <td>Aucune categorie</td>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}