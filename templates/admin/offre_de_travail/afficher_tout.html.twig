{% extends '/admin/base.html.twig' %}
{% block content %}
    <section class="container-fluid">
        <div class="row align-content-center">
            <div class="col-md-6">
                <p class="h1 m-5">Liste des offres de travail</p>
            </div>
            <div class="col-md-5 m-auto">
                <a class="btn btn-primary float-right" href="{{ asset('admin/offre_de_travail/ajouter') }}">Ajouter une
                    offre de travail</a>
            </div>
        </div>
        <table class="table border text-center">
            <tr class="text-uppercase text-dark font-weight-bold">
                <td>Societe</td>
                <td>Categorie</td>
                <td>Nom</td>
                <td>Description</td>
                <td>Actions</td>
            </tr>
            {% for offreDeTravail in offreDeTravails %}
                <tr>
                    <td>{{ offreDeTravail.societe.nom }}</td>
                    {% if offreDeTravail.categorie %}
                        <td>{{ offreDeTravail.categorie.nom }}</td>
                    {% else %}
                        <td>-</td>
                    {% endif %}
                    <td>{{ offreDeTravail.nom }}</td>
                    <td>{{ offreDeTravail.description }}</td>
                    <td>
                        <a class="btn btn-dark m-1"
                           href="{{ asset('admin/offre_de_travail/'~offreDeTravail.id~'/modifier') }}">
                            Modifier
                        </a>
                        <a class="btn btn-danger m-1"
                           href="{{ asset('admin/offre_de_travail/'~offreDeTravail.id~'/supprimer') }}">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </section>
{% endblock %}
